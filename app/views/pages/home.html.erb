<% if current_user.present? %>

  <div class="container">
    <div class="col-md-10">

      <h1>You've currently made <%= current_user.posts.count %> posts:</h1>

      <% current_user.posts.each_with_index do |post, index| %>
        <div class="container">
          <p>
          <%= index+1 %>)
          <%= post.content %>
          <%= link_to "Delete", post_path(post), method: :delete %>
          </p>
        </div>
      <% end %>

      <!-- Modal button -->
      <button type="button" id="modalbutton" class="modalbutton btn btn-primary" data-bs-toggle="modal" data-bs-target="#tweetModal">
        New Tweet
      </button>


    </div>


  </div>

<% end %>

<!-- Covid -->
