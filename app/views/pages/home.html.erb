<% if current_user.present? %>

  <div class="container text-center" id="tweetsContainer">
    <div class="col-md-12">

      <h1>You've currently made <%= current_user.posts.count %> posts:</h1>
      <i class="fa fa-telegram" aria-hidden="true"></i><span>New posts will be  <strong>crossposted</strong> to <a href="https://t.me/apitestpow">this telegram channel</a></span><br>

      <% current_user.posts.each_with_index do |post, index| %>
        <div class="container">
          <p>
          <%= index+1 %>)
          <%= post.content %>
          <%= link_to "Delete", post_path(post), method: :delete %>
          </p>
        </div>
      <% end %>

      <!-- Modal button -->
      <button type="button" id="modalbutton" onclick="launchModal()" class="modalbutton btn btn-primary" data-bs-toggle="modal" data-bs-target="#tweetModal" >
        New Tweet
      </button>

    </div>


  </div>

<% end %>

